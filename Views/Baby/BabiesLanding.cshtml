@model IEnumerable<Baby>

@{
    ViewData["Title"] = "Babies Collection";
    Layout = "_BabyLayout";
}


<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nickname)
            </th>
            <th>
                Age Days
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var baby in Model)
        {
            <tr>
                <td>
                    <a asp-action="BabyLanding" asp-route-id=@baby.BabyId><h3>@Html.DisplayFor(modelItem => baby.Name)</h3></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => baby.Nickname)
                </td>
                    
            </tr>
        }

    </tbody>

</table>
