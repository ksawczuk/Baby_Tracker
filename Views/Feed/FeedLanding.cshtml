@model Baby_Tracker.Models.Feed


@{
    ViewData["Title"] = "Feed Details";
    Layout = "_BabyLayout";
}

<h1>Feed Details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FeedLanding">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="btn-group">

                    

                    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" id="LatchDrop">
                        @Html.DisplayNameFor(model => model.LatchQuality)
                    </button>
                    <select asp-for="LatchQuality" asp-items="@Html.GetEnumSelectList<LatchQuality>()" class="form-control" id="LatchDrop"></select>    
                    <span asp-validation-for="LatchQuality" class="text-danger"></span>


                </div>




            </div>
            <div class="form-group">
                <div class="btn-group">
                    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                        @Html.DisplayNameFor(model => model.ChinEngagement)
                    </button>

                    <select asp-for="ChinEngagement" asp-items="@Html.GetEnumSelectList<ChinEngagement>()" class="form-control">
                        <option selected="selected" value="0"></option>
                    </select>
                    <span asp-validation-for="ChinEngagement" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="btn-group">
                    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                        @Html.DisplayNameFor(model => model.Alertness)
                    </button>
                    <select asp-for="Alertness" asp-items="@Html.GetEnumSelectList<Alertness>()" class="form-control">
                        <option selected="selected" value="0"></option>
                    </select>
                    <span asp-validation-for="Alertness" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="btn-group">
                    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                        @Html.DisplayNameFor(model => model.Fussiness)
                    </button>
                    <select asp-for="Fussiness" asp-items="@Html.GetEnumSelectList<Fussiness>()" class="form-control">
                        <option selected="selected" value="0"></option>
                    </select>
                    <span asp-validation-for="Fussiness" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="End Feed" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Baby" asp-action="BabyLanding">Back to baby</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
