            <a class="btn btn-md btn-secondary" asp-controller="Feed"
               asp-action="StartFeed" asp-route-babyId="@Model.BabyId"
               asp-route-sleepId="@Model.SleepId"
               role="button">Dream Feed</a>
        </div>
    </div>
     -->
    <div class="col-4-md">
        <div class="ml-2">
            <a class="btn btn-md btn-secondary" asp-controller="Sleep" asp-action="StartIntervention" asp-route-id="@Model.SleepId" role="button">Intervention</a>
        </div>
    </div>
</div>

<div>
    <a asp-controller="Baby" asp-action="BabyLanding" asp-route-id="@Model.BabyId">Back to Baby Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
