@model Baby_Tracker.Models.Sleep

@{
    ViewData["Title"] = "Sleepy Time";
    Layout = "_BabyLayout";
}

<h4>Sleep Details</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SleepLanding">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SleepId" />
           
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsNap" /> @Html.DisplayNameFor(model => model.IsNap)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="End Sleep" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <!--
    <div class="pl-3"></div>
    <div class="col-4-md">
